{
  "name": "hass-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Home Assistant API integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "hass-mcp": "./bin/hass-mcp.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:mock": "node dist/index.js --mock",
    "start:stdio": "node dist/index.js --stdio",
    "start:stdio:mock": "node dist/index.js --stdio --mock",
    "dev": "tsc -w & node --watch dist/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "ci-test": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --ci",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "hass-mcp": "npm run build && npm start",
    "hass-mcp:mock": "npm run build && npm run start:mock",
    "inspect": "npx -y modelcontextprotocol/inspector npm run hass-mcp",
    "prepublishOnly": "npm run build",
    "install-global": "npm run build && npm install -g ."
  },
  "keywords": [
    "mcp",
    "home-assistant",
    "hass",
    "smarthome",
    "iot",
    "modelcontextprotocol",
    "llm",
    "ai"
  ],
  "author": "Linus <220827+oleander@users.noreply.github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oleander/mcp-hass-server"
  },
  "homepage": "https://github.com/oleander/mcp-hass-server#readme",
  "bugs": {
    "url": "https://github.com/oleander/mcp-hass-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.6.0",
    "dotenv": "^16.3.1",
    "home-assistant-js-websocket": "^9.4.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.2.6",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "preferGlobal": true,
  "files": [
    "dist",
    "bin",
    "docs",
    "prompts",
    "README.md",
    "LICENSE"
  ]
}
